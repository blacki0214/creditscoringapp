rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isOwner(userId);
    }
    
    // EKYC Logs collection
    match /ekyc_logs/{logId} {
      // Users can only read/write their own EKYC logs
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // EKYC Images collection
    match /ekyc_images/{imageId} {
      // Users can only read/write their own EKYC images
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Credit Applications collection
    match /credit_applications/{applicationId} {
      // Users can read their own applications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Users can create applications for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can update their own applications (for status changes)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // No delete allowed
      allow delete: if false;
    }
    
    // Loan Offers collection
    match /loan_offers/{offerId} {
      // Users can read their own loan offers
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Users can create loan offers for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Users can update their own loan offers (for acceptance)
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       // Only allow updating the 'accepted' and 'acceptedAt' fields
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['accepted', 'acceptedAt']);
      // No delete allowed
      allow delete: if false;
    }
    
    // Application History collection
    match /application_history/{historyId} {
      // Users can read their own application history
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Users can create history entries for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // No updates or deletes allowed
      allow update, delete: if false;
    }
  }
}
